{
  "manifest_version": 3,
  "name": "SafeTap",
  "version": "1.0",
  "description": "Analyzes website privacy policies for risks.",
  "permissions": [
    "tabs"
  ],
  "host_permissions": [
    "http://127.0.0.1:8001/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "SafeTap Analysis",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}